<div class="container">
	<div class="d-flex justify-content-center my-5">
		<h1>New ingredient</h1>
	</div>
	<div class="row d-flex justify-content-center">
		<div class="col-6 py-5 px-4" id="new-contail-form-container" style="border-radius: 5px;">
			<%= simple_form_for([@beer, @numofpeople]) do |f| %>
			  <div class="form-inputs">
			    <%= f.input :description %>
			    <%= f.association :ingredient %>
			  </div>

			  <div class="form-actions">
			    <%= f.button :submit, :class => "btn btn-ghost2 mt-4"%>
			  </div>
			<% end %>
		</div>
	</div>
</div>